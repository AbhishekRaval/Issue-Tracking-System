<div class="row">
  <div class="col" style="text-align: center;">
    <h3> Welcome to Task Manager Website !</h3>    
    <%= form_tag("/session", method: :post)do %>

    <div class="form-group" style="margin-top: 3%">
    	Email : 
    	<input type="email" name="email" placeholder="user@example.com">    	
    </div>

    <div class="form-group" style="margin-top: 3%">
    	<button class="btn btn-primary">Login</button>
    	<%= link "Register", to: user_path(@conn, :new), class: "btn btn-primary" %>	  </div>
        <%= link "Register as Manager", to: user_path(@conn, :newmanager), class: "btn btn-dark" %>   
    </div>
    <% end %>
  </div>
</div>